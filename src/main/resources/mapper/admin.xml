<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tenco.hobby.repository.interfaces.AdminRepository">
	
	<select id="findAllQandA" resultType="com.tenco.hobby.repository.model.QandA">
		select * from question_tb where proceed = 0;
	</select>
	
	<select id="findbyIdQuestion" resultType="com.tenco.hobby.repository.model.QandA">
		select * from question_tb where id = #{id};
	</select>
	
	<select id="findRangeQandA" resultType="com.tenco.hobby.repository.model.QandA">
		select * 
		from question_tb 
		where proceed = 0
		limit #{id}, 10;
	</select>
	
	<select id="findAllUserList" resultType="com.tenco.hobby.repository.model.User">
		select * from user_tb where user_role != "ADMIN";
	</select>
	
	<insert id="insertAnswer">
		insert into answer_tb(user_id, content, question_id)
		values (#{userId}, #{answer}, #{questionId});
	</insert>
	<update id="updateQuestion">
		update question_tb
		set proceed = 1
		where id = #{id};
	</update>
	<select id="findAllReportBoard" resultType="com.tenco.hobby.repository.model.ReportBoard">
		select * from report_board_tb where proceed = 0;
	</select>
	<select id="findAllReportComment" resultType="com.tenco.hobby.repository.model.ReportComment">
		select * from report_comment_tb where proceed = 0;
	</select>
	<select id="findReportBoardById" resultType="com.tenco.hobby.repository.model.ReportBoard">
		select * from report_board_tb where proceed = 0 and id = #{id};
	</select>
	<select id="findReportCommentById" resultType="com.tenco.hobby.repository.model.ReportComment">
		select * from report_comment_tb where proceed = 0 and id = #{id};
	</select>
</mapper>