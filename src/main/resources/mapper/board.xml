<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tenco.hobby.repository.interfaces.BoardRepository">

	<insert id="insert">
		insert into board_tb (title, content, user_id, hobby_id)
		values ( #{title}, #{content}, #{userId}, #{hobbyId})				
	</insert>

	<update id="updateById">
		update board_tb 
		set title = #{title}, content = #{content}, user_id = #{userId}, hobby_id = #{hobbyId}
		where id = #{id}
	</update>
	
	<delete id="deleteById">
		delete from board_tb where id = #{id}
	</delete>
	                              
	<select id="findAll" resultType="com.tenco.hobby.repository.model.Board">
		select * from board_tb
	</select>
	
	<select id="findById" resultType="com.tenco.hobby.repository.model.Board">
		select * from board_tb where id = #{id}
	</select>


</mapper>